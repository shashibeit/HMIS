
@{
    ViewBag.Title = "Medicine Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Medicine Master</h3>
        </div>


        <div class="box-body">

            @using (Html.BeginForm("MedicineMaster", "Master", FormMethod.Post, new { id = "medicineform" }))
            {
                <div class="col-md-4">
                    <div class="form-group form-group-inputPatientName">
                        <label for="inputPatientName">Medicine Name</label>
                        @Html.TextBox("txtMedicineName", "", new { @class = "form-control", @placeholder = "Patient name" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-group-inputAddress">
                        <label for="inputAddress">Address</label>
                        @Html.TextBox("inputAddress", "", new { @class = "form-control", @placeholder = "Address" })
                    </div>
                </div>
            }




        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Medicine List</h3>
                </div>
                <div style="padding-left:20px; padding-right:20px;">
                    <table id="example" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Sr. No</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Unit</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Sr. No</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Unit</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable({
            "lengthMenu": [10,15, 25, 50, 75, 100],
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            ajax: {
                url: ServerURI + "Master/GetAllMedicines",
                dataType: 'json',
                type: "POST"
            },
            dataSrc: 'data',
            "columns": [
                { data: "ID" },
                { data: "Name" },
                { data: "Type" },
                { data: "Unit" }
            ]
        });
    });

</script>

